<Window x:Class="ZbAppleBinWav.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zb.AppleBinWav" Height="200" Width="600" SizeToContent="WidthAndHeight">
    <Grid Width="512" Height="128">
        <Button x:Name="PlayButton" Content="Play" HorizontalAlignment="Left" Height="64" Margin="416,32,0,0" VerticalAlignment="Top" Width="64" Click="Play_Click"/>
        <Label x:Name="BytesLength" Content="..." HorizontalAlignment="Left" Height="64" Margin="128,32,0,0" VerticalAlignment="Top" Width="256" Background="Beige" FontFamily="Consolas"/>
        <Button x:Name="Source" Content="Source" HorizontalAlignment="Left" Height="64" Margin="32,32,0,0" VerticalAlignment="Top" Width="64" Click="Source_Click"/>
    </Grid>
</Window>
